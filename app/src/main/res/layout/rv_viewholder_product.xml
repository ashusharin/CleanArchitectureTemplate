<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_vh"
    android:layout_width="140dp"
    android:layout_height="240dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="1dp"
    app:strokeColor="@color/pink_figma"
    app:strokeWidth="1dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp">


        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerInside"
            android:id="@+id/img_vh"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_title_vh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Заголовок"
            style="@style/RecyclerViewTitleStyle"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_price_vh"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_price_vh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            android:text="$ Цена"
            style="@style/RecyclerViewPriceStyle"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
    </layout>